<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#052D61"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/holliday"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Selamat datang"
        android:textColor="#fff"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/holliday2"
        android:layout_below="@+id/holliday"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Silahkan masuk ke akun kamu"
        android:textColor="#fff"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundwhite">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_avatar"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>

            <custom_font.MyEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:letterSpacing="0.1"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/roundwhite"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>
            <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:textColorHint="#000"-->
            <!--android:layout_marginRight="@dimen/activity_horizontal_margin"-->
            <!--app:passwordToggleDrawable="@drawable/ic_eye"-->
            <!--app:passwordToggleEnabled="true">-->
            <custom_font.MyEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="#00000000"
                android:hint="Password"
                android:inputType="textPassword"
                android:letterSpacing="0.1"
                android:maxLength="8"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="13dp" />
            <!--</android.support.design.widget.TextInputLayout>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lupa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="16dp">
            <custom_font.MyTextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Lupa Password?"
                android:layout_marginLeft="25dp"
                android:textColor="#FFF"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/ll_footer"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button_get"
                android:text="@string/btn_login"
                android:textAllCaps="false"
                android:textColor="#052D61"
                android:textSize="@dimen/button_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="16dp">

            <custom_font.MyTextView
                android:id="@+id/signin"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum Punya Akun?"
                android:gravity="end"
                android:textColor="#FFF"/>
            <custom_font.MyTextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar sekarang"
                android:layout_marginLeft="25dp"
                android:textColor="#FFF"
                android:gravity="start"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
